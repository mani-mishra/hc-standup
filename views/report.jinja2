{% extends "base.jinja2" %}
{% block title %}Report{% endblock %}
{% block head %}
    {{ super() }}
    <script src="static/js/report.js"></script>
{% endblock %}
{% block bodyClasses %}report-sidebar{% endblock %}
{% block content %}
    <div class="report">
        <div class="statuses-container">
            <ul class="statuses">
            </ul>
        </div>
        <div class="spinner-container"></div>
        <footer>
            <div>
                {% if create_new_report_enabled %}
                    <button class="aui-button aui-button-subtle create-new-button"
                            data-room-id={{room_id}}>
                        <span class="aui-icon aui-icon-small aui-iconfont-add">Create</span>
                        &nbsp;Create new report
                    </button>
                {% endif %}
            </div>
        </footer>
    </div>
{% endblock %}
